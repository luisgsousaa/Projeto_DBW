
<h1 class="page-title mb-3">Estatísticas Globais</h1>


<div class="col-md-12 box pt-4">
  <div class="light-blue-box-background">
    <div class="justify-content-between blue-box">
      <div class="white-title justify-content-center">Estatísticas do Jogo</div>

      <section class="btn-sm mx-2 alternar-botoes alternar-botoes-box">
        <button class="active">
          <h5 class="text-center fw-semibold">Lista</h5>
        </button>
        <button>
          <h5 class="text-center">Gráfico</h5>
        </button>
      </section>
    </div>

    <div class="box-content">
      <div id="list-1">
        <ol>
          <% Object.entries(stats).forEach(([label, valor]) => { %>
            <li class="white-box no-border-white-box justify-content-between">
              <span class="text-overflow me-4"><%= label %></span>
              <span><%= valor %></span>
            </li>
          <% }) %>
        </ol>
      </div>

      <div class="graph" id="graph-1" style="display: none">
        <canvas id="statsChart"></canvas>
      </div>      
    </div>
  </div>
</div>




<h1 class="page-title mb-3 pt-3">Rankings</h1>


<% let statIndex = 2; %>

<% for (const [label, players] of Object.entries(rankings)) { %>
  <div class="col-md-12 box pb-5 pt-4">
    <div class="light-blue-box-background">
      <div class="justify-content-between blue-box">
        <div class="white-title justify-content-center"><%= label %></div>

        <section class="btn-sm mx-2 alternar-botoes alternar-botoes-box">
          <button class="active">
            <h5 class="text-center fw-semibold">Lista</h5>
          </button>
          <button>
            <h5 class="text-center">Gráfico</h5>
          </button>
        </section>
      </div>

      <div class="box-content">
        <div id="list-<%= statIndex %>">
          <ol>
            <% players.forEach(player => { %>
              <li class="white-box no-border-white-box justify-content-between">
                <span class="text-overflow me-4">
                  <a class="text-decoration-none text-reset" 
                  href="/profile/<%= player.username.split(' - ')[1] %>"
                  title="Clique para visitar o perfil de <%= player.username.split(' - ')[1] %>" >
                  <%= player.username %></a>
                </span>
                <span><%= player.value %></span>
              </li>
            <% }) %>
          </ol>
        </div>

        <div class="graph" id="graph-<%= statIndex %>" style="display: none">
          <canvas id="chart-<%= statIndex %>"></canvas>
        </div>  
      </div>
    </div>
  </div>
  <% statIndex++; %>
<% } %>









<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/rankings.js"></script>
<script src="/js/button.js"></script>